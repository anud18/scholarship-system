# Database Configuration
DATABASE_URL=postgresql+asyncpg://scholarship_user:scholarship_pass@postgres:5432/scholarship_db
DATABASE_URL_SYNC=postgresql://scholarship_user:scholarship_pass@postgres:5432/scholarship_db

# Security
SECRET_KEY=your-secret-key-at-least-32-characters-long-change-in-production

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CACHE_TTL=600

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=scholarship-documents
MINIO_SECURE=false

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@scholarshipapp.com
EMAIL_FROM_NAME=Scholarship System

# Application Settings
DEBUG=false
ENVIRONMENT=production
CORS_ORIGINS=https://your-frontend-domain.com

# Student API Configuration
# Set to true to enable student data fetching from external API
STUDENT_API_ENABLED=true

# Production API endpoint (replace with actual university API endpoint)
STUDENT_API_BASE_URL=https://api.university.edu.tw/student

# API Account ID provided by university IT department
STUDENT_API_ACCOUNT=scholarship_system

# HMAC Key (hex format) provided by university IT department
# This is a sample key - MUST be replaced with actual key in production
STUDENT_API_HMAC_KEY=your-actual-hmac-key-in-hex-format-from-university-it

# API timeout in seconds
STUDENT_API_TIMEOUT=10.0

# API encoding type (usually UTF-8)
STUDENT_API_ENCODE_TYPE=UTF-8

# Mock SSO Configuration (for development only)
ENABLE_MOCK_SSO=false
MOCK_SSO_DOMAIN=dev.university.edu

# Frontend Configuration
HOST_IP=your-server-ip-or-domain