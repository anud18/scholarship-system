# Local Development Environment Variables
# Copy this file to .env.local and customize as needed

# Backend API URL for local development
# This is used by Next.js rewrites to proxy /api/* requests
# Default: http://localhost:8000 (when backend runs locally or via docker-compose)
# Docker: http://backend:8000 (when frontend also runs in Docker)
INTERNAL_API_URL=http://localhost:8000

# Debug Panel Control (optional)
# Set to "true" to enable debug panel in development
NEXT_PUBLIC_ENABLE_DEBUG_PANEL=true
