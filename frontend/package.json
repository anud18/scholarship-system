{
  "name": "scholarship-frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --coverage --watchAll=false",
    "test:ci": "NODE_OPTIONS=--max-old-space-size=4096 jest --coverage --watchAll=false --ci --passWithNoTests --maxWorkers=2 --reporters=default --reporters=jest-junit",
    "test:coverage": "jest --coverage --watchAll=false --ci --reporters=default",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:api": "node test-api-connection.js",
    "dev:safe": "npm run test:api && npm run dev",
    "type-check": "tsc --noEmit --skipLibCheck",
    "api:generate": "openapi-typescript http://localhost:8000/api/v1/openapi.json -o ./lib/api/generated/schema.d.ts",
    "api:watch": "openapi-typescript http://localhost:8000/api/v1/openapi.json -o ./lib/api/generated/schema.d.ts --watch",
    "email:dev": "email dev --dir ./emails",
    "email:export": "email export --dir ./emails --outDir ./public/email-templates"
  },
