# Production Environment Configuration

# External Database Configuration (from separate DB VM)
DB_HOST=your-db-server-ip
DB_PORT=5432
DB_NAME=scholarship_db
DB_USER=scholarship_user
DB_PASSWORD=your-very-strong-db-password

# Redis Configuration (local to app server)
REDIS_PASSWORD=your-very-strong-redis-password

# Application Configuration
SECRET_KEY=your-very-strong-secret-key-generate-with-openssl-rand-hex-32
DEBUG=false
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ENVIRONMENT=production
DOMAIN=yourdomain.com

# External MinIO Configuration (from separate DB VM)
MINIO_HOST=your-db-server-ip
MINIO_PORT=9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-very-strong-minio-secret-key
MINIO_BUCKET_NAME=scholarship-documents-prod
MINIO_SECURE=true

# Portal SSO Configuration (Production)
PORTAL_SSO_ENABLED=true
PORTAL_JWT_SERVER_URL=https://portal.nycu.edu.tw/jwt/portal
PORTAL_TEST_MODE=false
PORTAL_SSO_TIMEOUT=10.0

# Student API Configuration (Production)
STUDENT_API_ENABLED=true
STUDENT_API_BASE_URL=https://your-student-api-server.edu.tw
STUDENT_API_ACCOUNT=scholarship_prod
STUDENT_API_HMAC_KEY=your-production-hmac-key-64-chars
STUDENT_API_TIMEOUT=10.0
STUDENT_API_ENCODE_TYPE=UTF-8

# Email Configuration (Production)
SMTP_HOST=your-smtp-server.edu.tw
SMTP_PORT=587
SMTP_USER=scholarship-system@yourdomain.edu.tw
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@yourdomain.edu.tw
EMAIL_FROM_NAME=NYCU Scholarship System

# Mock SSO disabled in production
ENABLE_MOCK_SSO=false