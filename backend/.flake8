[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    alembic/versions,
    *.pyc,
    .env,
    venv,
    env

# Error codes to ignore
extend-ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)

# Complexity
max-complexity = 10

# Docstrings
docstring-convention = google

# Show source code for errors
show-source = True
statistics = True
count = True
